    "next": "^14.2.4",
    "nextron": "^9.5.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.7.3"
  }
